<!DOCTYPE html>
<html lang="en">

<head>
    <script>
        if (!sessionStorage.getItem("email")) window.location.href = "/main"
        if (!sessionStorage.getItem("confirm")) window.location.href = "/main"
    </script>
    <script src="./scripts/index.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Реєстрація</title>
    <link rel="stylesheet" href="./css/index.css" />
</head>

<body>
    <progress-bars>
        <div class="progress">
            <div class="indeterminate"></div>
        </div>
    </progress-bars>

    {{> alerts}}

    <span class="copy">
        <span class="m-3"> Beta 1.2.0 </span>
        &copy; &nbsp; 37 Web Production
    </span>
    <div class="auth-wrapper">
        <div class="auth-content">
            <form class="auth-form">
                <div class="title">Реєстрація</div>

                <div class="form-group">
                    <input id="SNPField" style="width: 100%;" class="auth-control_SNP auth-control" placeholder="Ф.И.О."
                        type="text" />
                </div>

                <div class="form-group">
                    <input id="pass1Field" class="auth-control" placeholder="Пароль" type="password" />
                    <input id="pass2Field" class="auth-control" placeholder="Повторіть пароль" type="password" />
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="rmme" />
                    <label class="form-check-label" for="rmme">
                        Запам'ятати мене
                    </label>
                </div>
                <button id="signup" type="submit">Зареєструватися</button>
                <a href="/singin" type="button">Вже маэте аккаунт?</a>
            </form>
        </div>
    </div>

    <!-- Bootstrap + jQuery -->
    <script src="./libs/jQuery/jQuery.3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
    <script src="./libs/bootstrap-4.5.2/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>

    <!-- Main Scripts -->
    <scripts>
        <script src="./scripts/Regexp.js"></script>
        <script src="./scripts/Alert.js"></script>
        <script src="./scripts/Loader.js"></script>
        <script src="./scripts/Http.js"></script>
        <script src="./scripts/signup.js"></script>
    </scripts>
</body>

</html>